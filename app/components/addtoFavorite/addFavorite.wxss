.container {
  position: fixed;

  top: 0;
  right: 10px;
}

.bubble {
  background: #ffc952;
  padding: 0 8px;

  margin-top: 10px;

  display: inline-block;
  position: relative;
	height: 40px;

  box-shadow: 1px 0px 5px rgba(0, 0, 0, 0.1);
  border-radius: 4px;
}

.txt {
  line-height: 40px;
  font-size: 12px;
  color: white
}


.left-top:after{
	content: ' ';
	position: absolute;
	width: 0;
	height: 0;
  left: -20px;
	right: auto;
  top: 0px;
	bottom: auto;
	border: 22px solid;
	border-color: red transparent transparent transparent;
}


.top-left:after{
	content: ' ';
	position: absolute;
	width: 0;
	height: 0;
	right: 60px;
	top: -20px;
	border: 10px solid;
	border-color: transparent transparent #ffc952 transparent;
  border-radius: 2px;
}